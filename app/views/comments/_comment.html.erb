<div class="individual-comment <%= 'nested-comment' if comment.commentable_type == 'Comment'%>">
  <div class="panel">
    <p><%= comment.content %></p>
  </div>
  <div class="panel-footer">
    <div class="medium-10 columns">
      <p><strong><%=comment.user.username%></strong><%= time_ago_in_words(comment.created_at) %> ago</p>
    </div>
    <div class="medium-2 columns">
      <p class="right footer-icons"><a href='#' class="comment-reply"><%= fa_icon 'edit'%></a> &nbsp; <a class="expand-comments"> <%= fa_icon 'angle-double-down' %></a></p>
    </div>
  </div>
  <div class="comment-comment-form">
    <%= form_for new_comment, url: comment_comments_path(comment), :html => {:class => "nice new_comment_form"} do |f| %>
      <%= f.text_area :content, label: false, placeholder: 'Enter comment...' %>
      <%= f.submit 'Add comment' %>
    <% end %>
  </div>
  <%= render partial: 'comments/comment', collection: comment.comments, locals: { new_comment: new_comment } %>
</div>
