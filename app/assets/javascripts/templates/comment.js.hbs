<div class="individual-comment {{nestedClass commentable_type}}">
  <div class="panel">
    <p>{{content}}</p>
  </div>
  <div class="panel-footer">
    <div class="medium-10 columns">
      <p><strong>{{user.username}}</strong> {{timeSince created_at}} ago</p>
    </div>
    <div class="medium-2 columns">
      <p class="right footer-icons"><a href='#' class="comment-reply"><i class="fa fa-edit"></i></a> &nbsp; <a class="expand-comments"> <i class="fa fa-angle-double-down"></i></a>
    </div>
  </div>
  <div class="hidden-form comment-comment-form">
      <form accept-charset="UTF-8" action="/comments/{{id}}/comments" class="nice new_comment_form" id="new_comment" method="post">
        <textarea class="medium input-text" id="comment_content" name="comment[content]" placeholder="Enter comment...">
  </textarea>
        <input class="small radius success button" name="commit" type="submit" value="Add comment" />
  </form>  </div>
</div>
